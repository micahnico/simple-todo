<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Projects", projects_path, class: 'black' %></li>
    <li class="breadcrumb-item active" aria-current="page">Labels</li>
  </ol>
</nav>

<div class="mt-3 mb-2">
  <%= link_to new_label_path, class: 'no-text-decor' do %>
    New label <i class="fas fa-plus-circle"></i>
  <% end %>
</div>

<div class="row">
  <% @labels.each do |label| %>
    <div class="col-sm-6 col-lg-4">
      <div class="card shadow-sm mb-2">
        <div class="card-body">

          <div class='pt-2 pb-2' style='display: flex; justify-content: space-between;'>
            <p><i class="fas fa-tag mr-2"></i> <%= label.name %></p>
            <div>
              <%= link_to edit_label_path(label), class: 'no-text-decor', data: {toggle: 'tooltip'}, title: 'Edit label' do %>
                <i class="far fa-edit black"></i>
              <% end -%>
              <%= link_to label_path(label), class: 'no-text-decor', method: :delete, data: { confirm: "Delete label?", toggle: 'tooltip' }, title: 'Delete todo' do %>
                <i class="far fa-trash-alt black"></i>
              <% end -%>
            </div>
          </div>

        </div>
      </div>
    </div>
  <% end %>
</div>